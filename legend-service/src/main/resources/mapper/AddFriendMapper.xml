<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jk.game.legend.server.mapper.AddFriendMapper">

    <resultMap id="BaseResultMap" type="com.jk.game.legend.model.User">
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="friendrequest" jdbcType="VARCHAR" property="friendrequest"/>
    </resultMap>

    <select id="checkFriendRequest" resultMap = "BaseResultMap" >
        select friendrequest from user_friend
        where user_id = #{userId}
    </select>

    <update id="insertFriendRequest" >
        update user_friend set'friendrequest'= #{friendrequest}
        where user_id = #{userId}
    </update>

</mapper>